 @model Web.Models.Vehicle

@{
    ViewData["Title"] = "Add Vehicle";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <!-- Bootstrap Header -->
    <div class="container-fluid p-3 mb-2 bg-primary text-white">
        <h2 class="text-center">@ViewData["Title"]</h2>
    </div>

    <div class="container mt-5">
        <form asp-action="AddVehicle" method="post">
            <div class="form-group">
                <label asp-for="Vname" class="control-label">Name</label>
                <input asp-for="Vname" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vtype" class="control-label">Type</label>
                <input asp-for="Vtype" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vplate" class="control-label">Plate Number</label>
                <input asp-for="Vplate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vowner" class="control-label">Owner</label>
                <input asp-for="Vowner" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add Vehicle" class="btn btn-primary" />
            </div>
        </form>
    </div>


</body>
</html>
