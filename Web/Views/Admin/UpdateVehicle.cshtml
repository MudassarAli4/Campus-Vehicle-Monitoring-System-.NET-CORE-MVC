                <label asp-for="Vname" class="control-label">Name</label>
                <input asp-for="Vname" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vtype" class="control-label">Type</label>
                <input asp-for="Vtype" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vplate" class="control-label">Plate Number</label>
                <input asp-for="Vplate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Vowner" class="control-label">Owner</label>
                <input asp-for="Vowner" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>

    </div>
</body>
</html>
