 @model Web.Models.Vehicle

@{
    ViewData["Title"] = "Update Vehicle";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
