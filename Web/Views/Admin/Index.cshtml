

@{
    ViewData["Title"] = "Admin Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .full-height {
            height: 100vh;
        }
    </style>
</head>
<body>
    <div class="container full-height d-flex flex-column justify-content-between">
        <!-- Top Section -->
        <div class="row">
            <div class="col-12 text-center mt-5">
                <h2>Welcome Admin!</h2>
            </div>
        </div>

        <!-- Middle Section -->
        <div class="row justify-content-center">
            <div class="col-6 text-center">
                <div class="mb-4">
                    <a asp-action="ManageGuards" class="btn btn-primary mr-2">Manage Guards</a>
                    <a asp-action="ManageVehicles" class="btn btn-primary mr-2">Manage Vehicles</a>
                    <a asp-action="GenerateReport" class="btn btn-primary">Generate Report</a>
                </div>
            </div>
        </div>

        <!-- Bottom Section -->
        <div class="row justify-content-center mb-5">
            <div class="col-6 text-center">
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="btn btn-danger">Logout</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
