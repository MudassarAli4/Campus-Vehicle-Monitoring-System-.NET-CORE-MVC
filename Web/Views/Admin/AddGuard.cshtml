@model Web.Models.User

@{
    ViewData["Title"] = "Add Guard";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <!-- Bootstrap Header with Custom Color -->
    <div class="container-fluid p-3 mb-2 bg-primary text-white" style="background-color: #7600bc !important;">
        <h2 class="text-center">@ViewData["Title"]</h2>
    </div>

    <div class="container mt-5">
        <form asp-action="AddGuard" method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cnic" class="control-label">CNIC</label>
                <input asp-for="Cnic" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">Phone</label>
                <input asp-for="Phone" class="form-control" />
            </div>
            <div class="form-group" style="display: none;">
                <!-- Hide the Role input -->
                <label asp-for="Role" class="control-label">Role</label>
                <input asp-for="Role" class="form-control" value="Guard" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add Guard" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <!-- Bootstrap JavaScript Dependencies -->
  </body>
</html>
